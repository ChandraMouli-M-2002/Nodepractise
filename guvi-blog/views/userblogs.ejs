<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/css/bootstrap') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
  </head>
  <body>
    <%- include('./partials/components/nav') %>

    <div class="container my-5">
      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-md-3 mb-3" >
          <div class="card h-100">
            <img
              class="card-img-top"
              src="/uploads/<%= blog.coverImage %>"
              alt="Card image"
              style="width: 100%; height: 190px; object-fit:contain"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content.slice(0,70) %>...</p>
              <a href="/blog/view/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
            </div>
          </div>
        </div> 
        <% }) %>
      </div>
    </div>

    <%- include('./partials/js/bootstrap') %>
  </body>
</html>
